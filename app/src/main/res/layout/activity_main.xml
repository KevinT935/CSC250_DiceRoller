<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rollsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRollButtonPressed"
        android:text="2 + 5 + 4 + 2"
        android:textColor="#FFEB3B"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onRollButtonPressed"
        android:text="13"
        android:textColor="#6AAF4C"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SevenB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="7" />

                <Button
                    android:id="@+id/EightB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="8" />

                <Button
                    android:id="@+id/NineB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/FourB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="4" />

                <Button
                    android:id="@+id/FiveB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="5" />

                <Button
                    android:id="@+id/SixB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/OneB"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="1" />

                <Button
                    android:id="@+id/TwoB"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="2" />

                <Button
                    android:id="@+id/ThreeB"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ZeroB"
                    android:layout_width="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="qtyButtonPressed"
                    android:text="0" />

                <Button
                    android:id="@+id/ClearB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="clearButtonPressed"
                    android:text="Clear" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/d4B"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:tag="D4"
                    app:srcCompat="@drawable/d4" />

                <ImageButton
                    android:id="@+id/d6B"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:tag="D6"
                    app:srcCompat="@drawable/d6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/d8B"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:tag="D8"
                    app:srcCompat="@drawable/d8" />

                <ImageButton
                    android:id="@+id/d10B"
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:tag="D10"
                    app:srcCompat="@drawable/d10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/d12B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:tag="D12"
                    app:srcCompat="@drawable/d12" />

                <ImageButton
                    android:id="@+id/d20B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:tag="D20 "
                    app:srcCompat="@drawable/d20" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qtyTV"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="4"
            android:textColor="#FFEB3B"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/selectedDieTV"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:onClick="diceButtonPressed"
            android:text="D6"
            android:textColor="#4FFF3B"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/RollB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRollButtonPressed"
            android:text="Roll" />

        <Button
            android:id="@+id/PercentileB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Percentile" />
    </LinearLayout>

</LinearLayout>